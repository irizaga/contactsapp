<header class="header">
  <div class="nav__list">
    <li class="nav__item"><a href="/users">Users</a></li>
  </div>
</header>

<div class="user-main">
  <% if @users.length == 0 %>
    <h1 class="warning"> No results </h1>
  <% else %>
    <section class="user-card">
        <% users = @users.includes(:contacts, :phones) %>
        <% users.each do |user|%>
          <div class="users-info">
            <p>Name: <%= user.user_name %></p>
            <p>Contacts: <%= user.contacts.length %> </p>
            <p>Phones: <%= user.phones.length %> </p>
          </div>
        <% end %>
    </section>
  <% end %>
</div>
